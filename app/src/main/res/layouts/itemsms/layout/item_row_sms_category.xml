<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:elevation="5dp"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/sms_category_item_row_border_rounded">


    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/categoryImage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        fresco:roundedCornerRadius="@dimen/cornerRadiusSmsCategory"
        fresco:actualImageScaleType="focusCrop"
        fresco:placeholderImage="@drawable/pranavi_creation"
        fresco:placeholderImageScaleType="focusCrop" />

    <View
        android:id="@+id/imageLayerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/gradient_image" />

    <TextView
        android:id="@+id/categoryName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:fontFamily="Segoe UI"
        android:text="BirthDay"
        android:gravity="center_vertical"
        android:padding="4dp"
        android:shadowColor="@color/text_shadow"
        android:shadowDx="1"
        android:shadowDy="1"
        android:shadowRadius="4"
        android:textColor="@android:color/white"
        android:textSize="20sp"
        android:textStyle="bold" />



</RelativeLayout>